<header>
  <h1>つぶやき</h1>
</header>
<p><%= notice %></p>
<div class="new_tweet">
  <%= link_to 'つぶやきを投稿する', '/posts/new'%>
</div><br>
<table class = "top_page">
  <tr>
    <th>All Tweets</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td class = "content"><%= post.content %></td>
    <td class = "choice"><%= link_to 'edit', edit_post_path(post.id) %></td>
    <td class = "choice"><%= link_to 'delete', post_path(post.id), method: :delete, data:{ confirm:'本当に削除していいですか？'} %></td>
  </tr>
  <% end %>
</table>
