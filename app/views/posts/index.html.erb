<h1>つぶやき</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to 'edit', edit_post_path(post.id) %></td>
    <td><%= link_to 'delete', post_path(post.id), method: :delete, data:{ confirm:'本当に削除していいですか？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'つぶやきを投稿する', '/posts/new' %>
